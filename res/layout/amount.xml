<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_height="fill_parent"
              android:layout_width="fill_parent"
              android:orientation="vertical"
              android:padding="10dip">

    <LinearLayout android:layout_height="wrap_content"
                  android:layout_width="fill_parent"
                  android:orientation="horizontal">

        <TextView android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="@string/amount_label"
                  android:textSize="20sp" />

        <TextView android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:id="@+id/amount_value"
                  android:layout_marginLeft="10dip"
                  android:editable="false"
                  android:textSize="30sp"
                  android:textStyle="bold" />

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="â‚¬"
                  android:textSize="20sp"
                  android:editable="false"
                  android:layout_marginLeft="5dip" />

        <TextView android:id="@+id/current_input_value"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textSize="12sp"
                  android:editable="false"
                  android:layout_marginLeft="15dip"
                  android:textColor="@android:color/darker_gray" />

    </LinearLayout>

    <TableLayout android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginTop="10dip"
                 android:stretchColumns="*">

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content">
            <Button style="@style/numberButton"
                    android:text="1"
                    android:id="@+id/keypad_1" />
            <Button style="@style/numberButton"
                    android:text="2"
                    android:id="@+id/keypad_2" />
            <Button style="@style/numberButton"
                    android:text="3"
                    android:id="@+id/keypad_3" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content">
            <Button style="@style/numberButton"
                    android:text="4"
                    android:id="@+id/keypad_4" />
            <Button style="@style/numberButton"
                    android:text="5"
                    android:id="@+id/keypad_5" />
            <Button style="@style/numberButton"
                    android:text="6"
                    android:id="@+id/keypad_6" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content">
            <Button style="@style/numberButton"
                    android:text="7"
                    android:id="@+id/keypad_7" />
            <Button style="@style/numberButton"
                    android:text="8"
                    android:id="@+id/keypad_8" />
            <Button style="@style/numberButton"
                    android:text="9"
                    android:id="@+id/keypad_9" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content">

            <Button style="@style/numberButton"
                    android:text="0"
                    android:id="@+id/keypad_0" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="."
                    android:id="@+id/keypad_separator"
                    android:onClick="onNumButtonClick" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="C"
                    android:id="@+id/keypad_clear"
                    android:onClick="onActionButtonClick" />
        </TableRow>

        <TableRow android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="15dip">

            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="+"
                    android:id="@+id/keypad_plus"
                    android:layout_span="2"
                    android:onClick="onActionButtonClick" />
            <Button android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="-"
                    android:id="@+id/keypad_minus"
                    android:onClick="onActionButtonClick" />
        </TableRow>

    </TableLayout>

</LinearLayout>